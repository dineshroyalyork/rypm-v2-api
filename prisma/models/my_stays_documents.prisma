model my_stays_documents {
  id            String     @id @default(uuid())
  tenant_id     String
  property_id   String
  owner_id      String?
  // Document Details
  document_type String // water_transfer, electricity, gas_transfer, hot_water_tank, tenant_insurance, lease_agreement, offer_to_lease, move_out_photos, leave_notice
  image_url     String // S3 URL
  is_uploaded   Boolean    @default(false)
  // Timestamps
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  // Relationships
  tenant        tenants    @relation(fields: [tenant_id], references: [id])
  property      properties @relation(fields: [property_id], references: [id])

  @@index([tenant_id])
  @@index([property_id])
  @@index([document_type])
}
