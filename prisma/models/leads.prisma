model leads {
  id              String   @id @default(uuid())
  user_id         String   // Assigned agent
  tenant_id       String?  // If lead becomes a tenant
  first_name      String
  last_name       String
  email           String
  phone           String?
  status          LeadStatus
  source          String?   // e.g., "website", "referral", "walk-in"
  notes           String?
  assigned_date   DateTime @default(now())
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  user            users    @relation(fields: [user_id], references: [id])
  tenant          tenants? @relation(fields: [tenant_id], references: [id])

  @@map("leads")
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL_SENT
  NEGOTIATION
  CLOSED_WON
  CLOSED_LOST
} 