model residents {
  id                      String     @id @default(uuid())
  property_id             String
  tenant_id               String
  owner_id                String?
  // Personal Details
  first_name              String?
  middle_name             String?
  sur_name                String?
  email                   String?
  phone_number            String?
  country_code            String?
  gender                  String?
  marital_status          String?
  credit_score            String?
  government_id_number    String?
  social_insurance_number String?
  profile_picture         String?
  //resident_type
  residence_type          String?
  // Income Details
  source_of_income        String?
  employment_type         String?
  occupation              String?
  current_role            String?
  monthly_income          Int?
  //employment details
  who_you_work_for        String?
  start_date              DateTime?
  manager_name            String?
  manager_phone_number    String?
  manager_country_code    String?
  manager_email           String?
  // Timestamps
  created_at              DateTime   @default(now())
  updated_at              DateTime   @updatedAt
  // Relationships
  property                properties @relation(fields: [property_id], references: [id])
  tenant                  tenants    @relation(fields: [tenant_id], references: [id])

  @@index([property_id])
  @@index([tenant_id])
}
